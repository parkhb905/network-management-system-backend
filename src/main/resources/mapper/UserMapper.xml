<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.network.nms.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.network.nms.domain.User">
        INSERT INTO `user` (username, email, password)
        VALUES (#{username}, #{email}, #{password})
    </insert>

    <select id="findByUsername" parameterType="string" resultType="com.network.nms.domain.User">
        SELECT id, username, email, password
        FROM `user`
        WHERE username = #{username}
    </select>

</mapper>